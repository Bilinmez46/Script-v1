-- LocalScript, StarterPlayer -> StarterPlayerScripts veya StarterGui içerisine eklenmeli

local player = game.Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = player.PlayerGui  -- GUI'yi yerel oyuncunun ekranına ekle

-- Başlangıçta GUI'yi gizle
ScreenGui.Enabled = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.3, 0, 0.6, 0)
frame.Position = UDim2.new(0.35, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Active = true
frame.Draggable = true
frame.Parent = ScreenGui

-- Frame'in köşelerini oval yapmak
local UICornerFrame = Instance.new("UICorner")
UICornerFrame.CornerRadius = UDim.new(0.2, 0) -- %20 oval yapar
UICornerFrame.Parent = frame

-- GUI arka planını fotolu yap (ID: 112291638253013)
local bg = Instance.new("ImageLabel")
bg.Size = UDim2.new(1, 0, 1, 0) -- Tam ekran kaplasın
bg.Position = UDim2.new(0, 0, 0, 0)
bg.Image = "rbxassetid://112291638253013" -- Fotoğraf ID'si
bg.BackgroundTransparency = 1
bg.ZIndex = 1
bg.Parent = frame

-- Arka plan fotoğrafının köşelerini oval yapmak
local UICornerBG = Instance.new("UICorner")
UICornerBG.CornerRadius = UDim.new(0.2, 0) -- %20 oval yapar
UICornerBG.Parent = bg

-- Buton oluşturma fonksiyonu
local function createButton(name, pos, color, parent, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.8, 0, 0.1, 0)
    button.Position = pos
    button.BackgroundColor3 = color
    button.Text = name
    button.TextScaled = true
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.ZIndex = 2
    button.Parent = parent
    
    -- Butonları da oval yap
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0.4, 0) -- %40 oval
    buttonCorner.Parent = button

    button.MouseButton1Click:Connect(callback)
end

-- 1. Fire All Butonu (Mavi)
createButton("Fire All", UDim2.new(0.1, 0, 0.05, 0), Color3.fromRGB(0, 0, 255), frame, function()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            local fire = Instance.new("Fire", part)
            fire.Size = 1000
            fire.Heat = 1000
            fire.Color = Color3.fromRGB(0, 255, 0) -- Yeşil ateş
            fire.SecondaryColor = Color3.fromRGB(0, 200, 0)
        end
    end
end)

-- 2. Music Butonu (Kırmızı)
createButton("Music", UDim2.new(0.1, 0, 0.17, 0), Color3.fromRGB(255, 0, 0), frame, function()
    local sound = Instance.new("Sound", workspace)
    sound.SoundId = "rbxassetid://139477537381956"
    sound.Volume = 9999
    sound.Looped = true
    sound:Play()
end)

-- 3. Karakter boz Butonu (Pembe)
createButton("Karakter boz", UDim2.new(0.1, 0, 0.29, 0), Color3.fromRGB(255, 105, 180), frame, function()
    -- Karakteri tamamen silme ve reset atma işlemi
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character then
            local character = player.Character
            -- Karakterin tüm parçalarını sil
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") or part:IsA("Accessory") then
                    part:Destroy()
                end
            end
            -- Karakter yeniden doğması için bir reset işlemi uygula
            player:LoadCharacter()  -- Bu işlem karakteri resetler
        end
    end
end)

-- 4. Message Butonu (Mor)
createButton("Message", UDim2.new(0.1, 0, 0.41, 0), Color3.fromRGB(128, 0, 128), frame, function()
    spawn(function()
        while true do
            local message = Instance.new("Message")
            message.Parent = workspace
            message.Text = "BİLİNMEZ SİKERR 31"
            wait(0.5) -- Her 0.5 saniyede bir mesaj spamlanır
            message:Destroy()
        end
    end)
end)

-- 5. Hint Butonu (Siyah, Yazı Beyaz)
createButton("HINT", UDim2.new(0.1, 0, 0.53, 0), Color3.fromRGB(0, 0, 0), frame, function()
    if not workspace:FindFirstChild("HintMessage") then
        local hint = Instance.new("Hint")
        hint.Name = "HintMessage"
        hint.Parent = workspace
        hint.Text = "BİLİNMEZ GERİ DÖNDÜ!"
        hint.TextColor3 = Color3.fromRGB(255, 255, 255) -- Hint yazısının rengi beyaz
    end
end)

-- GUI'nin açılma animasyonu (Çıkışta herhangi bir yazı olmadan direkt GUI'nin açılması)
wait(1)  -- 1 saniye bekle (istediğiniz zamanlama burada yapılabilir)

-- GUI'yi açma animasyonu
ScreenGui.Enabled = true  -- GUI'yi aktif et
frame.Size = UDim2.new(0, 0, 0.6, 0)  -- Başlangıçta küçült
frame:TweenSize(UDim2.new(0.3, 0, 0.6, 0), "Out", "Quad", 1, true)  -- Büyüt ve açılma animasyonu uygula

-- Oyuncular öldüğünde GUI'yi koruma
player.CharacterAdded:Connect(function(character)
    -- GUI'nin kaybolmasını engelle
    ScreenGui.Enabled = true
end)
